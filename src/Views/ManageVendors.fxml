<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="329.0" prefWidth="414.0" style="-fx-background-color: #3d4956;"
            stylesheets="@../assets/Theme.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="Controllers.ManageVendorsController">
   <children>
      <Label fx:id="lbl_title" layoutX="165.0" layoutY="28.0" text="Manage Vendors" textFill="#eda678">
         <font>
            <Font name="Quicksand Bold" size="14.0" />
         </font>
      </Label>
      <JFXButton fx:id="btn_save" layoutX="254.0" layoutY="269.0" onAction="#on_saveClick" prefHeight="25.0"
                 prefWidth="57.0" text="Save"/>
      <JFXTextField fx:id="txt_vendorId" focusColor="#cccccc" labelFloat="true" layoutX="219.0" layoutY="73.0" prefHeight="23.0" prefWidth="127.0" promptText="Vendor ID" unFocusColor="#eda678">
         <font>
            <Font name="Quicksand Bold" size="12.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="txt_vendorName" focusColor="#cccccc" labelFloat="true" layoutX="219.0" layoutY="121.0" prefHeight="23.0" prefWidth="127.0" promptText="Vendor Name" unFocusColor="#eda678">
         <font>
            <Font name="Quicksand Bold" size="12.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="txt_phoneNumber" focusColor="#cccccc" labelFloat="true" layoutX="219.0" layoutY="169.0" prefHeight="23.0" prefWidth="127.0" promptText="Phone Number" unFocusColor="#eda678">
         <font>
            <Font name="Quicksand Bold" size="12.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="txt_address" focusColor="#cccccc" labelFloat="true" layoutX="219.0" layoutY="215.0" prefHeight="23.0" prefWidth="127.0" promptText="Shipping Address" unFocusColor="#eda678">
         <font>
            <Font name="Quicksand Bold" size="12.0" />
         </font>
      </JFXTextField>
      <TableView fx:id="tbl_vendors" layoutX="20.0" layoutY="73.0" prefHeight="168.0" prefWidth="120.0">
         <columns>
            <TableColumn fx:id="col_vendorName" minWidth="120.0" prefWidth="120.0" text="Vendors" />
         </columns>
      </TableView>
      <ImageView fx:id="btn_add" fitHeight="25.0" fitWidth="26.0" layoutX="356.0" layoutY="72.0" onMousePressed="#on_addClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/icon_add32.png" />
         </image>
      </ImageView>
      <ImageView fx:id="btn_close" fitHeight="25.0" fitWidth="26.0" layoutX="388.0" layoutY="2.0"
                 onMousePressed="#closeAddVendor" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/icon_delete32.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
